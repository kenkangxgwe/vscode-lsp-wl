{
    "name": "lsp-wl-client",
    "version": "0.1.7",
    "publisher": "lsp-wl",
    "author": "kenkangxgwe",
    "license": "MIT",
    "displayName": "Wolfram Language Server",
    "description": "VSCode client of the Wolfram Language Server.",
    "main": "./out/extension",
    "engines": {
        "vscode": "^1.33.0"
    },
    "activationEvents": [
        "onLanguage:wolfram"
    ],
    "categories": [
        "Programming Languages"
    ],
    "preview": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/kenkangxgwe/vscode-lsp-wl.git"
    },
    "homepage": "http://github.com/kenkangxgwe/vscode-lsp-wl/tree/master/README.md",
    "icon": "images/logo.png",
    "galleryBanner": {
        "color": "#3C3C3C",
        "theme": "dark"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Wolfram Language Server",
            "properties": {
                "WolframLanguageServer.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "WolframLanguageServer.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the wolfram language server."
                },
                "WolframLanguageServer.Port": {
                    "scope": "user",
                    "type": "number",
                    "default": "6536",
                    "description": "Port to communicate with language server."
                },
                "WolframLanguageServer.WolframPath": {
                    "scope": "user",
                    "type": "string",
                    "default": "wolfram",
                    "description": "Path to wolfram executable."
                },
                "WolframLanguageServer.WLServerPath": {
                    "scope": "user",
                    "type": "string",
                    "default": "/path/to/lsp-wl",
                    "description": "Path to wolfram language server folder."
                }
            }
        },
        "languages": [
            {
                "id": "wolfram",
                "aliases": [
                    "Wolfram Language",
                    "wolfram",
                    "Mathematica",
                    "mathematica",
                    "wolframscript"
                ],
                "extensions": [
                    ".m",
                    ".nb",
                    ".wl",
                    ".wls"
                ]
            }
        ],
        "debuggers": [
            {
                "type": "dap-wl",
                "label": "Wolfram Debug Adapter",
                "languages": [
                    "wolfram"
                ],
                "configurationAttributes": {
                    "launch": {
                        "properties": {
                            "trace": {
                                "type": "boolean",
                                "description": "Enable logging of the Debug Adapter Protocol.",
                                "default": true
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "dap-wl",
                        "request": "attach",
                        "name": "Ask for file name",
                        "program": "",
                        "stopOnEntry": true
                    }
                ],
                "configurationSnippets": [
                    {
                        "label": "Wolfram Debug Adapter: Attach",
                        "description": "Attach current workspace to a wolfram kernel session.",
                        "body": {
                            "type": "dap-wl",
                            "request": "attach",
                            "name": "Ask for file name",
                            "program": "",
                            "stopOnEntry": true
                        }
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run update-vscode && npm run compile",
        "update-vscode": "vscode-install",
        "postinstall": "vscode-install",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "test": "sh ./scripts/e2e.sh"
    },
    "dependencies": {
        "get-port": "^5.1.1",
        "vscode-languageclient": "^5.2.1",
        "vscode-debugadapter": "1.37.1"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.11.7",
        "tslint": "^5.16.0",
        "typescript": "^3.6.4",
        "vscode": "^1.1.35"
    },
    "contributors": [
        {
            "name": "kenkangxgwe",
            "email": "kenkangxgwe@gmail.com"
        },
        {
            "name": "hxianglong",
            "email": "hxianglong@gmail.com"
        }
    ]
}
